<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/change_img"
            style="@style/CamButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/camerasmall" />
        <ImageButton
            android:id="@+id/save"
            style="@style/CamButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/save" />
        <ImageButton
            android:id="@+id/share"
            style="@style/CamButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/share" />
        <Button
            android:id="@+id/switcherButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/switch_button"
            android:padding="10px"
            android:text="@string/switch_layout"
            android:textColor="#FFF"
            android:textSize="30px" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/viewswitcher"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <!--Vanilla layout-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/insert_pic_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/VanillaEditText"/>

                <EditText
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    style="@style/VanillaEditText"/>
            </RelativeLayout>

        </ScrollView>

        <!--Demotivational Poster layout-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/demoMeme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/demo_poster"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/insert_pic_id2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/demo_pic"
                    android:scaleType="fitXY" />
                <EditText
                    android:id="@id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters|textMultiLine|textNoSuggestions"
                    android:textSize="70px"
                    style="@style/DemoEditText"/>
                <EditText
                    android:id="@id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
                    android:textSize="30px"
                    style="@style/DemoEditText"/>

            </LinearLayout>
        </ScrollView>
    </ViewSwitcher>
</LinearLayout>